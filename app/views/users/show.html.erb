<h3><%= @user.name %></h3>
<p>Email: <%= @user.email if @user.email %></p>
<p><%= "About #{@user.about}" if @user.about %></p>

<p>Location: <%= @user.location %></p>

<%= link_to "User's poems", user_poems_path(@user), :class => 'btn' %>
<% if current_user.has_role? :admin %>
<%= link_to "BanUnban Button",  banunban_user_path(@user) ,:method => :put %>
<%end %>
